{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/css/*", "/js/*", "/images/*", "/i18n/*", "/*.ico", "/*.png", "/*.svg", "/*.xml", "/*.txt", "/*.json"]
  },
  "routes": [
    {
      "route": "/docs",
      "redirect": "/docs/",
      "statusCode": 301
    },
    {
      "route": "/docs/01-diagnostico",
      "redirect": "/docs/01-diagnostico/",
      "statusCode": 301
    },
    {
      "route": "/docs/02-problemas",
      "redirect": "/docs/02-problemas/",
      "statusCode": 301
    },
    {
      "route": "/docs/03-propuestas",
      "redirect": "/docs/03-propuestas/",
      "statusCode": 301
    },
    {
      "route": "/docs/04-organizacion",
      "redirect": "/docs/04-organizacion/",
      "statusCode": 301
    },
    {
      "route": "/docs/05-ia",
      "redirect": "/docs/05-ia/",
      "statusCode": 301
    },
    {
      "route": "/docs/06-legal",
      "redirect": "/docs/06-legal/",
      "statusCode": 301
    },
    {
      "route": "/docs/07-web",
      "redirect": "/docs/07-web/",
      "statusCode": 301
    },
    {
      "route": "/docs/08-investigacion",
      "redirect": "/docs/08-investigacion/",
      "statusCode": 301
    },
    {
      "route": "/sitemap.xml",
      "headers": {
        "Content-Type": "application/xml",
        "Cache-Control": "public, max-age=86400"
      }
    },
    {
      "route": "/robots.txt",
      "headers": {
        "Content-Type": "text/plain",
        "Cache-Control": "public, max-age=86400"
      }
    },
    {
      "route": "/manifest.json",
      "headers": {
        "Content-Type": "application/manifest+json",
        "Cache-Control": "public, max-age=604800"
      }
    }
  ],
  "responseOverrides": {
    "404": {
      "rewrite": "/404.html",
      "statusCode": 404
    }
  },
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "SAMEORIGIN",
    "X-XSS-Protection": "1; mode=block",
    "Referrer-Policy": "strict-origin-when-cross-origin",
    "Permissions-Policy": "camera=(), microphone=(), geolocation=()",
    "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self'"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".md": "text/markdown",
    ".xml": "application/xml",
    ".svg": "image/svg+xml"
  }
}
